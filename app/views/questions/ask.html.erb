<div class="m-3">
  <form action="/answer" method="get" data-turbo="false" class="mb-4">
    <!-- Form Label -->
    <div class="form-group mb-3" style="width: 300px;">
      <label for="answer" class="form-label">Ask your coach anything</label>
      <!-- Input Field -->
      <input
        type="text"
        name="question"
        class="form-control"
        placeholder="Type your question here..."
        >
    </div>

  <!-- Submit Button -->
  <button type="submit" class="btn btn-primary">
    <i class="fas fa-paper-plane"></i> Ask!
  </button>
</form>
</div>
